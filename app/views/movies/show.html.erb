<h2><%= @facade.movie.title %></h2>
<%= button_to "Discover Page", discover_index_path, method: :get %>
<br>
<%= button_to "Create Viewing Party for #{@facade.movie.title} Page", new_movie_viewing_party_path(@facade.movie_id), method: :get %>
<br>
<%= button_to "Get Similar Movies", similar_movies_path(@facade.movie_id), method: :get %>
<table id="movie_info">
  <tr>
    <td>Vote: <%= @facade.movie.vote_average %></td>
    <td>Runtime: <%= @facade.movie.convert_runtime %></td>
    <td>Genre: <%= @facade.movie.genres_to_string %></td>
  </tr>
</table>
<br>
<h3>Summary</h3>
  <div id="summary">
    <p><%= @facade.movie.summary %></p>
  </div>
<h3>Cast</h3>
  <table id="cast">
    <tr>
      <td>Cast Member</td>
      <td>Character</td>
    </tr>
    <% @facade.movie.cast.each do |cast_member| %>
      <tr>
        <td><%= cast_member[:character] %></td>
        <td><%= cast_member[:name] %></td>
      </tr>
    <% end %>
  </table>
<br>
<h3><%= @facade.movie.num_of_reviews %> Reviews</h3>
  <div id="reviews">
    <% @facade.movie.reviews.each do |review| %>
    <p><strong><%= review[:author] %></strong>: <%= review[:content] %></p>
    <% end %>
  </div>
